<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="salon_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.salon</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="45"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Error Tracker" string="Error Tracker"
                         data-key="error_notifier">

                        <h2>Error Tracker</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-xs-12 col-md-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Error" class="col-md-3 o_light_label"/>
                                            <field name="error_field"/>
                                            <label string="Info" class="col-md-3 o_light_label"/>
                                             <field name="info_field"/>
                                            <label string="Warning" class="col-md-3 o_light_label"/>
                                             <field name="warning_field"/>
                                            <label string="Critical" class="col-md-3 o_light_label"/>
                                            <field name="critical_field"/>
                                            <label string="Send Email" class="col-md-3 o_light_label"/>
                                             <field name="send_field"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>